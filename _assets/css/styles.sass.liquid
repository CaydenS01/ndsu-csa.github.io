@charset "utf-8";

/* BEGIN BULMA MODIFICATIONS */
$primary: #d8647d;
$link: $primary;
$link-hover: #a03b51;
$text: #efefef;
$text-strong: $text;
$card-radius: 0.1rem;
$shadow: 0.1em 0.3em 1em 0.1em rgba($primary, 0.5), 0 0px 0 1px rgba($primary, 0.06);
$dimensions: 16 24 32 48 64 96 128 256 512;

$body-background-color: #0c0c0c;
$card-background-color: transparent;
$footer-background-color: $body-background-color;

$table-background-color: $body-background-color;

@import "bulma.sass";

body, html 
    font-family: 'SourceCodeProRegular', monospace;

